<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@color/black"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/inout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="end"
            android:maxLines="3"
            android:textColor="#FF3700B3"
            android:textSize="40sp"
            tools:text="5-5"/>

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:maxLines="2"
            android:textColor="#FF3700B3"
            android:textSize="60sp"
            tools:text="0" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/button_clear"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text"
                android:textColor="#FFFFFFFF" />

            <Button
                android:id="@+id/button_bracket"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text2"
                android:textColor="#FFFFFFFF" />

            <Button
                android:id="@+id/button_bracket_r"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text1"
                android:textColor="#FFFFFFFF" />

            <Button
                android:id="@+id/button_division"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text3"
                android:textColor="#FFFFFFFF" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text4" />
            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text5" />
            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text6" />
            <Button
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:text="@string/text_op" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text7" />
            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text8" />
            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text10" />
            <Button
                android:id="@+id/button_subtraction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"

                android:textColor="#FFFFFFFF"
                android:text="@string/text11" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text12" />
            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text13" />
            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text14" />
            <Button
                android:id="@+id/button_addition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:textColor="#FFFFFFFF"
                android:text="@string/text15" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/textZ" />
            <Button
                android:id="@+id/button_croxx"
                style="@style/Button_Style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/textBack" />
            <Button
                android:id="@+id/button_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Button_Style"
                android:layout_weight="1"
                android:text="@string/text16" />
            <Button
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Button_Style"
                android:textColor="#FFFFFFFF"
                android:text="@string/text17" />
        </TableRow>

    </TableLayout>

</LinearLayout>
